# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/recall-ai

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# Web Push VAPID Keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Encryption Key for sensitive data
ENCRYPTION_KEY=your-encryption-key-here

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Optional: Google Cloud Speech-to-Text (fallback for audio transcription)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json

# Note: Gemini 1.5 Flash now supports native audio transcription
# Google Cloud Speech-to-Text is only used as a fallback if Gemini fails
